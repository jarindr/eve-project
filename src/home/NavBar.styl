.nav
  width: 100%
  padding-left: 20px
  padding-right: 20px
  box-sizing: border-box
  ul
    list-style: none
    margin: 0 auto
    padding: 0
    display: flex;
    justify-content: space-between;
    width: 100%
  li
    text-align: center
    display: inline-block
    vertical-align: top
    cursor: pointer
  a
    text-decoration: none
    display: block
    text-align: center
